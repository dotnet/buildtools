    <RootNamespace>GenFacades</RootNamespace>
    <AssemblyName>GenFacades.Core</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);COREFX</DefineConstants>
